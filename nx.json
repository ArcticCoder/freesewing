{
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": ["buildall"],
        "parallel": 5
      }
    }
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build", "prebuild"]
    },
    "buildall": {
      "dependsOn": ["^buildall", "prebuildall"]
    },
    "testci": {
      "dependsOn": ["^build"]
    },
    "lint": {
      "dependsOn": []
    },
    "e2e": {
      "dependsOn": ["prebuild"]
    }
  }
}
